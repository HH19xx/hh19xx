---
// index.astroページコンポーネント
// 画像のインポート
import faviconImg from '../assets/images/HARUH-favicon.png';
import logo9Img from '../assets/images/HARUH-logo9.png';
import logo5Img from '../assets/images/HARUH-logo5.png';
import arrow1Img from '../assets/images/HARUH-arrow1.png';
import noteLogoImg from '../assets/images/note_logo.png';

import Greeting from '../components/Greeting.astro';
import Profile from '../components/Profile.astro';
import MaximPromise from '../components/MaximPromise.astro';
import Skill from '../components/Skill.astro';
import Link from '../components/Link.astro';
---

<!doctype html>
<html lang="ja">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <style is:global>
    @import '../assets/style/style.scss';

    /* FOUC防止: CSSとJSが読み込まれるまで非表示 */
    body {
      background-color: rgba(35, 59, 108, 0.8);
      opacity: 0;
      transition: opacity 0.3s ease-in;
    }
    body.loaded {
      opacity: 1;
    }
  </style>
  <script>
    import('../scripts/index.js');
  </script>
  <link rel="icon" href={faviconImg.src}>
  <link href="https://fonts.googleapis.com/css2?family=DotGothic16&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css"
    integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous">
  <title>hhsgallery</title>
</head>

<body class="body">
  <header class="header" id="top">
    <div class="header_copy">
      <h2>あなたのためのインターフェース</h2>
    </div>
    <div class="c_bicycle">
      <a class="e_bicycle">
        <i class="fas fa-bicycle"></i>
      </a>
    </div>
  </header>
  <nav class="nav">
    <div class="c_bicycle_inner">
      <a href="#top">一番上に行く</a>
      <a href="#profile">プロフィール</a>
      <a href="#maxim-promise">行動原理とお約束</a>
      <a href="#skill">実績</a>
      <a href="#link">リンク</a>
      <a href="#bottom">一番下に行く</a>
    </div>
  </nav>
  <main class="main">
    <section class="main_section">
      <Greeting />
    </section>
    <section class="main_section">
      <Profile />
    </section>
    <section class="main_section">
      <MaximPromise />
    </section>
    <section class="main_section">
      <Skill />
    </section>
    <section class="main_section">
      <Link />
    </section>
  </main>
  <footer class="footer" id="bottom">
    <a href="https://forms.gle/ppqdBmGYrJ9P1XQL6" target="_blank" rel="noopener noreferrer">
      <div class="footer_inner">
        <div class="footer_inner_left">
          <i class="fas fa-bell"></i>
          <p>コンタクト(外部リンクの入力フォームへ飛びます)</p>
        </div>
        <div class="footer_inner_right">
          <p>Email: hookhull2@gmail.com</p>
        </div>
      </div>
    </a>
  </footer>
</body>

</html>
